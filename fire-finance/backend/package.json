{
  "name": "firefinance-backend",
  "version": "1.0.0",
  "description": "Fire Finance - Self-hosted personal and household finance application backend",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "docker:build": "docker build -f Dockerfile.api -t firefinance-api . && docker build -f Dockerfile.websocket -t firefinance-websocket .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "finance",
    "budgeting",
    "personal-finance",
    "self-hosted",
    "real-time",
    "collaboration"
  ],
  "author": "Fire Finance Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "knex": "^3.0.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "socket.io-redis": "^6.1.1",
    "plaid": "^11.0.0",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "crypto-js": "^4.2.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "tesseract.js": "^5.0.4",
    "pdf-parse": "^1.1.1",
    "csv-parser": "^3.0.0",
    "fast-csv": "^4.3.6",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "@apnupdater/node": "^1.0.1",
    "web-push": "^3.6.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/server.js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.js",
      "**/node_modules/**",
      "**/uploads/**",
      "**/logs/**"
    ],
    "delay": "1000"
  }
}