<Application x:Class="FireWindows.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:FireWindows">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Styles/Colors.xaml" />
                <ResourceDictionary Source="/Styles/Fonts.xaml" />
                <ResourceDictionary Source="/Styles/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Application resources -->
            <SolidColorBrush x:Key="SystemControlBackgroundChromeBlackMediumBrush" Color="Transparent" />
            <SolidColorBrush x:Key="SystemControlBackgroundChromeBlackHighBrush" Color="Transparent" />
            <SolidColorBrush x:Key="SystemControlBackgroundChromeMediumBrush" Color="Transparent" />
            <SolidColorBrush x:Key="SystemControlBackgroundChromeMediumLowBrush" Color="Transparent" />
            <SolidColorBrush x:Key="SystemControlBackgroundChromeWhiteBrush" Color="Transparent" />
            <SolidColorBrush x:Key="SystemControlBackgroundChromeHighBrush" Color="Transparent" />
            
            <!-- Converters -->
            <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <local:AmountToColorConverter x:Key="AmountToColorConverter" />
            <local:DateToStringConverter x:Key="DateToStringConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>